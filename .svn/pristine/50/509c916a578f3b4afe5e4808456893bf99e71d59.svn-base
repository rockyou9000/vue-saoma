<!DOCTYPE HTML>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0, minimum-scale=1.0, user-scalable=0, initial-scale=1.0, width=device-width" />
    <meta name="format-detection" content="telephone=no, email=no, date=no, address=no">
    <title>Hello APP</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/basic.css" />
    <link rel="stylesheet" type="text/css" href="../css/main.css" />
    <link rel="stylesheet" type="text/css" href="../css/modal.css" />
    <script src="../script/vue.js"></script>
    <script src="../script/vue-router.js"></script>
    <script src="../script/axios.js"></script>
</head>

<body>
    <div id="header">
        <i>返回</i>
        <h2>门店盘点工具</h2>
    </div>
    <div id="wrap">
        <div class="head clearfix">
            <h3>门店库存盘点</h3>
            <label>工号: <span>{{BA_ID}}</span></label>
            <label>姓名: <span>{{BA_NAME}}</span></label>
        </div>
        <div class="body">
            <div class="half" @click="showModal = true">
                <span>新增盘点单</span>
            </div>
            <div class="half">
                <span @click="showPan">查看盘点单</span>
            </div>
        </div>

        <!--modal component-->
        <modal v-if="showModal" @close="showModal = false">
            <!--
            you can use custom content here to overwrite
            default content
            -->
            <h3 slot="header">门店盘点单</h3>

            <div slot="body" class="modal-inner">
                <label>单据编号<input type="text" :value="PAPER_NUM" readonly></label>
                <label>盘点日期<input type="date"></label>
                <label>盘点店铺<input type="text" :value="PAN_SHOP" readonly><i>O</i></label>
            </div>

        </modal>
    </div>

</body>
<!-- template for the modal component -->
<script type="text/x-template" id="modal-template">
    <transition name="modal">
        <div class="modal-mask">
            <div class="modal-wrapper">
                <div class="modal-container">

                    <div class="modal-header">
                        <slot name="header">
                            default header
                        </slot>
                    </div>

                    <div class="modal-body">
                        <slot name="body">
                            default body
                        </slot>
                    </div>

                    <div class="modal-footer">
                        <slot name="footer">
                            <button class="modal-save">保存</button>
                            <button class="modal-close" @click="$emit('close')">关闭</button>
                        </slot>
                    </div>
                </div>
            </div>
        </div>
    </transition>
</script>
<script type="text/javascript">
    // register modal component
    Vue.component('modal', {
        template: '#modal-template'
    })

    // start app
    var modal = new Vue({
        el: '#wrap',
        data: {
            showModal: false,
            BA_ID: 110670,
            BA_NAME: '周骏',
            PAPER_NUM: '00653326545',
            PAN_SHOP: '上海中山公园晶品'
        },
        methods: {
            showPan: function() {
                api.openWin({
                    name: 'win_pan',
                    url: './pan.html'
                });
            }
        }
    })
</script>

</html>